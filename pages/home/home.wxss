/* pages/home/home.wxss */
.home-container {
  padding: 0;
  background-color: var(--bg-color);
}

/* 轮播图区域 */
.banner-section {
  width: 100%;
  height: 360rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
  z-index: 1;
}

.banner-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: white;
  z-index: 2;
}

.banner-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
}

.banner-desc {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
}

/* 快捷功能区 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx 30rpx;
  background-color: white;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
}

.action-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 46rpx;
  margin-bottom: 10rpx;
  background-color: var(--bg-color);
  color: var(--primary-color);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.15);
}

.action-item:active .action-icon {
  transform: scale(0.92);
}

.icon-scan {
  background-color: var(--primary-color);
  color: white;
}

.action-text {
  font-size: 24rpx;
  color: var(--secondary-color);
  font-weight: 500;
}

/* 推荐菜品区域 */
.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx 15rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--secondary-color);
  position: relative;
  padding-left: 20rpx;
}

.title-text::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  width: 8rpx;
  height: 32rpx;
  background-color: var(--primary-color);
  border-radius: 8rpx;
}

.title-more {
  font-size: 24rpx;
  color: var(--primary-color);
}

.featured-dishes {
  width: 100%;
  white-space: nowrap;
  padding: 10rpx 20rpx 30rpx;
}

.dish-card {
  display: inline-block;
  width: 220rpx;
  margin-right: 20rpx;
  background-color: white;
  border-radius: var(--card-radius);
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  transition: transform 0.3s ease;
}

.dish-card:active {
  transform: scale(0.96);
}

.dish-image {
  width: 100%;
  height: 180rpx;
  border-radius: var(--card-radius) var(--card-radius) 0 0;
}

.dish-info {
  padding: 16rpx;
}

.dish-name {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--secondary-color);
  display: block;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.dish-price {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: bold;
}

.dish-tag {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: var(--primary-color);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}

/* 评价预览 */
.reviews-preview {
  padding: 0 30rpx 30rpx;
  height: 380rpx;
}

.reviews-swiper {
  width: 100%;
  height: 100%;
}

.review-item {
  width: 100%;
  height: 180rpx;
}

.review-card {
  margin: 10rpx 0;
  padding: 20rpx;
  background-color: white;
  border-radius: var(--card-radius);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: flex-start;
}

.reviewer-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.review-content {
  flex: 1;
  overflow: hidden;
}

.reviewer-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.reviewer-name {
  font-size: 26rpx;
  font-weight: bold;
  color: var(--secondary-color);
}

.reviewer-rating {
  display: flex;
}

.rating-star {
  font-size: 24rpx;
  color: #ffb800;
  margin-left: 2rpx;
}

.review-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 餐厅信息 */
.restaurant-info {
  margin: 0 30rpx 30rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-icon {
  width: 50rpx;
  font-size: 32rpx;
  margin-right: 20rpx;
  text-align: center;
}

.info-text {
  font-size: 26rpx;
  color: var(--secondary-color);
  flex: 1;
}

.info-actions {
  display: flex;
  margin-top: 30rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 30rpx;
}

.info-button {
  flex: 1;
  font-size: 26rpx;
  color: var(--secondary-color);
  background-color: #f8f8f8;
  margin: 0 10rpx;
  padding: 15rpx 0;
  border-radius: 8rpx;
  box-shadow: none;
  font-weight: normal;
}

.info-button:first-child {
  margin-left: 0;
}

.info-button:last-child {
  margin-right: 0;
}

/* 动画效果 */
@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.pulse {
  animation: pulse 1.5s infinite;
} 